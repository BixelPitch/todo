{{> header}}
<div class="container grid-sm">
    {{> errors error=error}}
    <form action="/login" method="POST">
        <div class="form-group">
            <label class="form-label" for="username">{{i18n.username}}</label>
            <input class="form-input" pattern="[^\s]{1,64}" id="username" type="text" placeholder="{{i18n.username}}" name="username" oninvalid="this.setCustomValidity('{{i18n.usernameValidation}}')" title="{{i18n.usernameValidation}}" required>
        </div>
        <div class="form-group">
            <label class="form-label" for="password">{{i18n.password}}</label>
            <input class="form-input" id="password" type="password" placeholder="{{i18n.password}}" name="password" oninvalid="this.setCustomValidity('{{i18n.passwordValidation}}')" title="{{i18n.passwordValidation}}" required>
        </div>
        <div class="form-group">
            <input class="btn btn-primary btn-block" value="{{i18n.login}}" type="submit">
            <a class="btn btn-link btn-block" href="/register">{{i18n.redirectToRegister}}</a>
        </div>
    </form>
</div>
